<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">O'Quiz</h2>
  <p class="lead">Voici une liste des différents sujets présent sur O'quiz</p>
</div>

<div class="row">

  <% for (let tag of tags) { %>
    <div class="col-3 p-4 text-center">
      <% if (tag.color) {%>
        <a class="btn btn-block tag " style="background-color: <%= tag.color %>"href="/quizzes/tag/<%= tag.id %>">
            <%= tag.name %>
        </a>
    <%} else {%>
        <a class="btn btn-block tag tag--<%= tag.name.toLowerCase() %>" href="/quizzes/tag/<%= tag.id %>">
            <%= tag.name %>
        </a>
    <%}%>
  </div>
  <% } %>

</div>

<%- include('partials/footer') %>